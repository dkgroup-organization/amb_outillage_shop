<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_move_update" model="ir.ui.view">
            <field name="name">account.update.form</field>
            <field name="model">account.update</field>
            <field name="arch" type="xml">
                <form string="Correction of accounting entries">
                    <group>
                        <field name="new_date"/>
                    </group>
                    <group col="4">
                        <field name="account_id"/>
                        <field name="new_account_id"/>
                    </group>
                    <group col="4">
                        <field name="journal_id"/>
                        <field name="new_journal_id"/>
                    </group>
                    <group>
                        <field name="new_name"/>
                    </group>                    
                    <footer>
                        <button string="Update" name="trans_update_account" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_account_move_update" model="ir.actions.act_window">
            <field name="name">Correction of accounting entries</field>
            <field name="res_model">account.update</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_move_update"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move" />
        </record>
    </data>
</odoo>
