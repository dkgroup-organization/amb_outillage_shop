<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_user_form_inherited" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='action_id']" position="after">
                    <separator string="Email Templates"/>
                    <group>
                        <field name="so_template_id" />
                        <field name="con_template_id" />
                        <field name="inv_template_id"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
